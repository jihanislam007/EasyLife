<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="devsbox.easylife.SecondActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="8"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.60"
            android:background="@drawable/top"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5.20">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="6">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_weight="2"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center">

                            <CheckBox
                                android:id="@+id/ActionCheckBoxMR"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="MR."
                                android:textSize="18sp"></CheckBox>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center">

                            <CheckBox
                                android:id="@+id/ActionCheckBoxMRS"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="Mrs. "
                                android:textSize="18sp"></CheckBox>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="550dp"
                        android:orientation="vertical"
                        android:weightSum="6">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp">

                            <EditText
                                android:id="@+id/SecondNameEditText"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_alignParentEnd="true"
                                android:layout_marginTop="15dp"
                                android:background="@drawable/ractangle_dark_border"
                                android:hint="Person Name"
                                android:textAlignment="center" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp">

                            <EditText
                                android:id="@+id/SecondPhonEditTextOne"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_alignParentEnd="true"
                                android:layout_marginTop="15dp"
                                android:background="@drawable/ractangle_dark_border"
                                android:hint="Phone Number(must)"
                                android:textAlignment="center"
                                android:inputType="phone"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp">

                            <EditText
                                android:id="@+id/SecondPhonEditTextTwo"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_alignParentEnd="true"
                                android:layout_marginTop="15dp"
                                android:background="@drawable/ractangle_dark_border"
                                android:hint="Phone Number"
                                android:textAlignment="center"
                                android:inputType="phone"/>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp">

                            <EditText
                                android:id="@+id/SecondPhonEditTextThree"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_alignParentEnd="true"
                                android:layout_marginTop="15dp"
                                android:background="@drawable/ractangle_dark_border"
                                android:hint="Phone Number"
                                android:textAlignment="center"
                                android:inputType="phone"/>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp">

                            <EditText
                                android:id="@+id/SecondPhonEditTextFour"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_alignParentEnd="true"
                                android:layout_marginTop="15dp"
                                android:background="@drawable/ractangle_dark_border"
                                android:hint="Phone Number"
                                android:textAlignment="center"
                                android:inputType="phone"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp">

                            <EditText
                                android:id="@+id/SecondPhonEditTextFive"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_alignParentEnd="true"
                                android:layout_marginTop="15dp"
                                android:background="@drawable/ractangle_dark_border"
                                android:hint="Phone Number"
                                android:textAlignment="center"
                                android:inputType="phone"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </ScrollView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.20"
            android:gravity="center">

            <Button
                android:id="@+id/SecondSendButton"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="55dp"
                android:layout_marginRight="55dp"
                android:background="@drawable/send_button"
                android:text="Send SMS"
                android:textSize="24sp"></Button>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
